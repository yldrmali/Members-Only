<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - Free Bulma template</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <!-- <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet"> -->
    <link
      href="https://fonts.googleapis.com/css?family=Questrial&display=swap"
      rel="stylesheet"
    />
    <!-- Bulma Version 0.8.2-->
    <link
      rel="stylesheet"
      href="https://unpkg.com/bulma@0.8.2/css/bulma.min.css"
    />
    <link rel="stylesheet" type="text/css" href="/stylesheets/login.css" />
  </head>

  <body>
    <section class="hero is-success is-fullheight">
      <div class="hero-body">
        <div class="container has-text-centered">
          <div class="column is-4 is-offset-4">
            <h3 class="title has-text-black">Sign-Up</h3>
            <hr class="login-hr" />
            <p class="subtitle has-text-black">Please fill the form.</p>
            <div class="box">
              <form action="/signup" method="POST">
                <% if (errors) { %> <% errors.forEach(error => { %>
                <div class="message is-danger">
                  <div class="message-body">
                    <p><%=error.msg %></p>
                  </div>
                </div>
                <% }) %> <% } %>
                <div class="field">
                  <div class="control">
                    <input
                      class="input is-large"
                      name="username"
                      type="text"
                      placeholder="Username"
                      autofocus
                    />
                  </div>
                </div>
                <div class="field">
                  <div class="control">
                    <input
                      class="input is-large"
                      name="firstname"
                      type="text"
                      placeholder="Name"
                    />
                  </div>
                </div>

                <div class="field">
                  <div class="control">
                    <input
                      class="input is-large"
                      name="lastname"
                      type="text"
                      placeholder="Surname"
                    />
                  </div>
                </div>

                <div class="field">
                  <div class="control">
                    <input
                      class="input is-large"
                      name="password"
                      type="password"
                      placeholder="Password"
                    />
                  </div>
                </div>

                <button
                  class="button is-block is-info is-large is-fullwidth"
                  type="submit"
                  style="background-color: #071e36;"
                >
                  Sign-Up
                </button>
              </form>
            </div>
            <p style="color: #071e36;">
              <a style="color: #071e36;" href="/login">Log in</a>
              &nbsp;Â·&nbsp;
              <a style="color: #071e36;" href="/main">Home Page</a>
            </p>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
